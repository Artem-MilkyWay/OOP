           style="-fx-background-color: #222;">

    <AnchorPane>
        <Canvas fx:id="canvas" layoutX="0" layoutY="0"/>
    </AnchorPane>

    <VBox fx:id="endOverlay" alignment="CENTER" spacing="25"
          visible="false"
          style="-fx-background-color: rgba(0, 0, 0, 0.7); -fx-padding: 40; -fx-background-radius: 12;"
          maxWidth="400" maxHeight="300">

        <Label fx:id="statusLabel" text="Game Over!"
               style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #ffffff; -fx-font-family: 'Arial';"/>

